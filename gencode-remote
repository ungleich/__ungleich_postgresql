if [ -f "$__object/parameter/password") ]; then
    user="$(cat "$__object/parameter/user")"
    password="$(cat "$__object/parameter/password")"
    echo "su - postgres -c \"psql -c \\\"ALTER ROLE $user WITH PASSWORD '$password'\\\"\""
fi
